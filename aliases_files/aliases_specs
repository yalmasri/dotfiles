# Specs
alias sp='clean && bundle exec rspec --fail-fast=1'
alias rbsp='clean && rubocop -a && bundle exec rspec --fail-fast=1'
# alias spformat='clean && bundle exec rspec --fail-fast=1 --format documentation'

alias spc='clean && bundle exec rspec --fail-fast=1 spec/controllers/'
alias spm='clean && bundle exec rspec --fail-fast=1 spec/models/'
alias spf='clean && bundle exec rspec --fail-fast=1 spec/features/'
alias sph='clean && bundle exec rspec --fail-fast=1 spec/helpers/'
alias rgspm='rails g rspec:model'
alias rgspc='rails g rspec:controller'
