# Specs
alias sp='clear && bundle exec rspec'
alias spformat='clear && bundle exec rspec --format documentation'

alias spc='clear && bundle exec rspec spec/controllers/'
alias spm='clear && bundle exec rspec spec/models/'
alias spf='clear && bundle exec rspec spec/features/'
alias sph='clear && bundle exec rspec spec/helpers/'
alias rgspm='rails g rspec:model'
alias rgspc='rails g rspec:controller'
