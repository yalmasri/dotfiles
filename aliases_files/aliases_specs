# Specs
alias sp='clear && rspec'
alias spc='clear && rspec spec/controllers/'
alias spm='clear && rspec spec/models/'
alias spf='clear && rspec spec/features/'
alias sph='clear && rspec spec/helpers/'
alias rspec_model='rails g rspec:model'
alias rspec_con='rails g rspec:controller'

alias besp='clear && bundle exec rspec'
alias bespc='clear && bundle exec rspec spec/controllers/'
alias bespm='clear && bundle exec rspec spec/models/'
alias bespf='clear && bundle exec rspec spec/features/'
alias besph='clear && bundle exec rspec spec/helpers/'
